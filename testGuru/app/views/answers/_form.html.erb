<%= form_with model:[@question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <p>
    <%= form.label :body %>
    <%= form.text_field :body, value: @answer.body %>
  </p>
  <p>
    <%= form.label :correct, 'Корректность' %> : 
    <%= form.check_box :correct, id: :answer_correct %>
  </p>
  <p><%= form.submit 'Сохранить' %></p>
<% end %>
<%= link_to 'Назад к ответам', question_path(@answer.question) %>