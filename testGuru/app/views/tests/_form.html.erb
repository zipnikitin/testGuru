<%= form_with model: @test, local: true do |form| %>
  <p>
    <%= f.label :category_id, 'Категория:' %>:
    <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= f.label :tittle, 'Тест:' %><br>
    <%= f.text_field :tittle, value: @test.tittle %>
  </p>

  <p>
    <%= f.label :level, 'Уровень:' %><br>
    <%= f.number_field :level, value: @test.level %>
  </p>

  <p><%= f.submit 'Сохранить' %></p>
<% end %>