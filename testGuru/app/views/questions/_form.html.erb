<%= form_with model:[@test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>
  <p>
    <%= form.label :body %>
    <%= form.text_field :body, value: @question.body %>
  </p>
  <p><%= form.submit 'Сохранить' %></p>
<% end %>
<%= link_to 'Назад к вопросам теста', test_path(@question.test) %>